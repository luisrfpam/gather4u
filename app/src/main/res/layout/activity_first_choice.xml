<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.ufam.gather4u.activities.FirstChoiceActivity"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="49dp">
    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:id="@+id/ll_white_imgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1"
        android:baselineAligned="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgOverIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_weight="3.21"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:src="@drawable/branco_xxhdpi" />

        <ImageView
            android:id="@+id/imgOverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="3.21"
            android:adjustViewBounds="false"
            android:scaleType="center"
            android:src="@drawable/white_name_xhdpi" />

        <TextView
            android:id="@+id/splashTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="42dp"
            android:layout_weight="3.21"
            android:ems="18"
            android:scaleType="fitCenter"
            android:singleLine="false"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/splashMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="42dp"
            android:layout_weight="3.21"
            android:ems="18"
            android:scaleType="fitCenter"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/white" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/ll_botoes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/login_user_button"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:text="@string/button_enter"
            android:textColor="@android:color/white"
            android:background="@color/primary"
            android:textSize="14sp"
            android:layout_weight="0.32" />

        <Button
            android:id="@+id/new_user_button"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="fill_horizontal"
            android:background="@color/primary_dark"
            android:text="@string/button_new_user"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_weight="0.68" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sliderDots"
        android:layout_alignBottom="@id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

    </LinearLayout>

</RelativeLayout>

